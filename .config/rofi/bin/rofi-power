#!/usr/bin/env bash
command_caption_list=(
  "Shutdown"
  "Reboot"
  "Lock"
)

for ((i = 0; i < ${#command_caption_list[@]}; i++)); do
  [[ -z "$@" ]] && echo "${command_caption_list[$i]}" && continue
  case "$@" in
    "Shutdown")
      systemctl poweroff
      exit
      ;;
    "Reboot")
      systemctl reboot
      exit
      ;;
    "Lock")
      hyprlock > /dev/null 2>&1 &
      exit
      ;;
  esac
done
