alias reload="source ~/.zshrc"

#alt command
alias vi='nvim'
alias vim='nvim'

alias lt='exa --git -lT'
alias ll='exa --git -la'

alias -g @g='| grep'
alias -g @x='| xargs'

#cd
alias cdtemp="cd $(mktemp -d)"
alias ..='cd ..'

#fzf
#git
alias fgcd="fzf_ghq_cd"
alias fglog="fzf_ghq_log"

alias fgco="fzf_git_checkout"
alias fgshow="fzf_git_show"
alias fgadd="fzf_git_add"

#z
alias fzcd="fzf_z_search"