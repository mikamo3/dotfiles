#!/usr/bin/env bash
# create github repository and manage hub

set -e

if [[ $# == 0 ]]; then
  echo "usage: $(basename "$0") repository_name [private|public]"
  exit
fi

REPOS_NAME=$1
REPOS_FLG=
shift
if [[ $# != 0 ]]; then
    REPOS_FLG="--${1}"
else
    REPOS_FLG="--public"
fi

tmpdir=$(mktemp -d)
cd "$tmpdir"
gh repo create "$REPOS_NAME" "${REPOS_FLG}" -y

#FIXME: username
ghq get mikamo3/"${REPOS_NAME}"
